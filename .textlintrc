{
  "plugins": {
    "review-starter": {
      "extensions": [".re"]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 100
      },
      "max-comma": {
        "max": 3
      },
      "max-ten": {
        "max": 3
      },
      "max-kanji-continuous-len": {
        "max": 6
      },
      "arabic-kanji-numbers": true,
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "ですます",
        "strict": true
      },
      "ja-no-mixed-period": {
        "periodMark": "。",
        "allowPeriodMarks": ["、"]
      },
      "no-double-negative-ja": true,
      "no-dropping-the-ra": "true",
      "no-doubled-conjunctive-particle-ga": true,
      "no-doubled-conjunction": true,
      "no-doubled-joshi": {
        "min_interval": 1
      },
      "no-nfd": true,
      "no-invalid-control-character": true,
      "no-exclamation-question-mark": false,
      "no-hankaku-kana": true,
      "ja-no-weak-phrase": true,
      "ja-no-successive-word": true,
      "ja-no-abusage": true,
      "ja-no-redundant-expression": true,
      "ja-unnatural-alphabet": true,
      "no-unmatched-pair": true
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "never",
        "exceptPunctuation": true
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      }
    },
    "prh": {
      "rulePaths" :["./prh-rules/WEB+DB_PRESS.yml", "./prh-rules/techbooster.yml"]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/(.|)[0-9]+(ヶ|か)月/",
        "/(.|)[0-9,]+(分|つ|回|時)/",
        "･･･",
        "はじめに",
        "python",
        "module",
        "path",
        "babel",
        "typescript",
        "基づ",
        "コピペ",
        "あるある",
        "immutable",
        "おわりに",
        "アプリ",
        "command-line",
        "←←",
        "homebrew",
        "stable",
        "Widget",
        "いえない",
        "　　"
      ]
    }
  }
}
